---
const { imagen } = Astro.props;
const { titulo } = Astro.props;
const { desc } = Astro.props;
const { demo } = Astro.props;
const { codigo } = Astro.props;
---

<article>
  <div class="foto">
    <img src={imagen} alt="project image" />
  </div>
  <div class="info">
    <h2>{titulo}</h2>
    <p>{desc}</p>
    <div class="botones">
      <a href={demo}
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-external-link"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6"
          ></path><path d="M11 13l9 -9"></path><path d="M15 4h5v5"></path></svg
        > ver demo</a
      >
      <a href={codigo}
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
          ></path></svg
        > obtener el codigo</a
      >
    </div>
  </div>
</article>

<style>
  * {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
  }

  article {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    border: 2px solid #c70039;
    max-width: 300px;
    border-radius: 15px;
    box-shadow: 6px 6px 38px -3px rgba(0, 0, 0, 0.25);
    overflow: hidden;
    height: 350px;
  }

  .foto {
    width: 100%;
    object-fit: cover;
    overflow: hidden;
  }

  .foto img {
    width: 100%;
    height: 200px;
    transition: 0.3s ease-in-out all;
  }

  article:hover .foto img {
    scale: 1.1;
    transition: 0.3s ease-in-out all;
  }

  .info {
    padding: 10px;
  }

  .info h2 {
    margin-top: 10px;
    text-transform: capitalize;
    color: #34495e;
  }

  .info p {
    margin-top: 10px;
    font-weight: 300;
    transition: 0.3s ease-in-out;
  }

  article:hover p {
    color: #c70039;
  }

  .info .botones {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    gap: 0 5%;
    width: 100%;
    margin-top: 10px;
  }

  .botones a {
    display: flex;
    align-items: center;
    padding: 5px;
    border: 2px solid #000;
    text-decoration: none;
    border-radius: 5px;
    color: #34495e;
    font-weight: 800;
  }

  .botones a:hover {
    color: #c70039;
    border: 2px solid #c70039;
  }
</style>
