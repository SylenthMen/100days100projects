---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Reto 10 | 100 retos para mejorar en frontend">
  <article>
    <div class="info">
      <h2>
        Get <span class="desta">insights</span> that help your business grow.
      </h2>
      <p class="desc">
        Lorem ipsum dolor, sit amet consectetur adipisicing elit. Officiis,
        eveniet earum unde voluptate deleniti rem nulla expedita, voluptates
        quisquam laboriosam soluta! Maiores doloribus asperiores corrupti.
      </p>
      <div class="stats">
        <div>
          <h3>10k+</h3>
          <p>companies</p>
        </div>
        <div>
          <h3>314</h3>
          <p>templates</p>
        </div>
        <div>
          <h3>12m+</h3>
          <p>queries</p>
        </div>
      </div>
    </div>

    <div class="foto">
      <div class="bgImage"></div>
      <img src="/persons.jpg" alt="corporative picture" />
    </div>
  </article>
</Layout>

<style>
  :root {
    --colorFondo: #0a0c1c;
    --colorCard: #1c1938;
    --colorFotoBg: #42026a95;
    --colorDesta: #9555bd;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background: var(--colorFondo);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: auto;
  }

  article {
    width: 700px;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--colorCard);
    overflow: hidden;
  }

  .info {
    width: 400px;
    color: #fff;
    padding: 30px;
  }

  .info h2 {
    font-weight: 900;
    margin-bottom: 20px;
  }

  .info .desta {
    color: var(--colorDesta);
  }

  .info .desc {
    font-size: 12px;
    font-weight: 200;
  }

  .stats {
    display: flex;
    gap: 15%;
    align-items: center;
    margin-top: 30px;
  }

  .stats h3 {
    font-weight: 900;
    text-transform: uppercase;
  }

  .stats p {
    font-size: 12px;
    font-weight: 100;
    text-transform: capitalize;
  }

  .foto {
    position: relative;
    width: 350px;
    height: 300px;
  }

  .foto img {
    width: 100%;
    height: 100%;
    display: block;
  }

  .foto .bgImage {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--colorFotoBg);
    pointer-events: none;
  }
</style>
