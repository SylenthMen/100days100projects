---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Reto 9 | Order Summary Component">
  <section>
    <article>
      <div class="foto">
        <img src="/reto9/illustration-hero.svg" alt="imagen" />
      </div>
      <div class="info">
        <h2>order summary</h2>
        <p>
          You can listen to millons of songs, audiobooks, and podcasts on any
          device anywhere you line!
        </p>
      </div>
      <div class="price">
        <div class="icon">
          <img src="/reto9/icon-music.svg" alt="icono de musica" />
          <div>
            <h3>annual plan</h3>
            <p>$59.99/year</p>
          </div>
        </div>
        <a href="#">Change</a>
      </div>
      <div class="botones">
        <button class="succes">Proceed to Payment</button>
        <button class="cancel">Cancel Order</button>
      </div>
    </article>
  </section>
</Layout>

<style>
  :root {
    --colorFondo: #dee7ff;
    --colorCard: #fff;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background-image: url(/reto9/pattern-background-desktop.svg);
    background-repeat: no-repeat;
    object-fit: fill;
    background-color: var(--colorFondo);
    background-size: 100% auto;
  }

  section {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  article {
    background-color: var(--colorCard);
    width: 400px;
    border-radius: 25px;
    overflow: hidden;
  }

  .foto img {
    width: 100%;
  }

  .info {
    padding: 30px;
  }

  .info h2 {
    margin-top: 20px;
    text-align: center;
    font-weight: 800;
    text-transform: capitalize;
    font-size: 28px;
  }

  .info p {
    margin-top: 20px;
    line-height: 25px;
    text-align: center;
    font-size: 17px;
    font-weight: 100;
  }

  .price {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: #dee7ff33;
    padding: 20px;
    width: 350px;
    margin: auto;
    border-radius: 14px;
  }

  .price .icon {
    justify-content: start;
    display: flex;
  }

  .icon h3,
  p {
    margin-left: 10px;
  }

  .icon h3 {
    text-transform: capitalize;
  }

  .icon p {
    font-weight: 200;
  }

  .price a {
    font-size: 15px;
    color: #372be0;
  }

  .botones {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    padding: 30px;
  }

  .succes {
    background-color: #372be0;
    padding: 15px;
    border: none;
    color: #fff;
    font-weight: bold;
    border-radius: 10px;
    margin-bottom: 20px;
  }

  .succes:hover {
    cursor: pointer;
  }

  .cancel {
    border: none;
    background-color: transparent;
    color: gray;
    font-weight: 700;
  }
  .cancel:hover {
    color: red;
    cursor: pointer;
  }
</style>
