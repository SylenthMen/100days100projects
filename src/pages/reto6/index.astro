---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <article>
    <div class="result">
      <h2 class="title">your result</h2>
      <div class="porcen">
        <p class="big">76</p>
        <p class="small">of 100</p>
      </div>
      <p class="mess">great</p>
      <p class="desc">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ullam ut
        corporis nostrum ducimus totam tenetur!
      </p>
    </div>
    <div class="info">
      <div class="titu">
        <h3>summary</h3>
      </div>

      <div class="muestra one">
        <p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 18"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-bolt"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M13 3l0 7l6 0l-8 11l0 -7l-6 0l8 -11"></path></svg
          > reaction
        </p>
        <p class="nums"><strong>80</strong> / 100</p>
      </div>
      <div class="muestra two">
        <p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 18"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-clock-hour-7"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path><path
              d="M12 12l-2 3"></path><path d="M12 7v5"></path></svg
          > memory
        </p>
        <p class="nums"><strong>92</strong> / 100</p>
      </div>
      <div class="muestra tree">
        <p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 18"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-message-circle"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M3 20l1.3 -3.9c-2.324 -3.437 -1.426 -7.872 2.1 -10.374c3.526 -2.501 8.59 -2.296 11.845 .48c3.255 2.777 3.695 7.266 1.029 10.501c-2.666 3.235 -7.615 4.215 -11.574 2.293l-4.7 1"
            ></path></svg
          > verbal
        </p>
        <p class="nums"><strong>61</strong> / 100</p>
      </div>
      <div class="muestra four">
        <p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 18"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-eye"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path><path
              d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"
            ></path></svg
          > visual
        </p>
        <p class="nums"><strong>71</strong> / 100</p>
      </div>
      <button class="con">cotinue</button>
    </div>
  </article>
</Layout>

<style>
  :root {
    --degColorCard1: #000;
    --degColorCard2: #054;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: auto;
    background: #e1e1e1;
  }

  article {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 600px;
    background-color: #fff;
    border-radius: 25px;
    box-shadow: 2px 5px 20px -4px rgba(0, 0, 0, 0.75);
    height: 350px;
  }

  .result {
    width: 250px;
    text-align: center;
    background: rgb(103, 66, 252);
    background: linear-gradient(
      176deg,
      rgba(103, 66, 252, 1) 0%,
      rgba(48, 42, 232, 1) 100%
    );
    color: #fff;
    border-radius: 24px;
    padding: 20px;
    height: 350px;
  }

  .result .title {
    font-size: 24px;
    font-weight: 400;
    margin-bottom: 20px;
  }

  .porcen {
    display: flex;
    background: linear-gradient(
      176deg,
      rgba(48, 42, 232, 1) 0%,
      rgba(103, 66, 252, 1) 100%
    );
    margin: auto;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 30px;
    border-radius: 50%;
    width: 120px;
    height: 120px;
    margin-bottom: 20px;
  }

  .porcen .big {
    font-size: 42px;
    font-weight: 900;
  }

  .porcen .small {
    font-size: 12px;
    font-weight: 200;
  }

  .result .mess {
    font-size: 24px;
    text-transform: capitalize;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .result .desc {
    font-weight: 300;
    font-size: 12px;
  }

  .info {
    display: flex;
    width: 300px;
    flex-direction: column;
    justify-content: center;
    padding: 20px;
  }

  .info .titu h3 {
    font-size: 24px;
    font-weight: 500;
    text-transform: capitalize;
    margin-bottom: 13px;
  }

  .info .muestra {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    width: 100%;
    text-transform: capitalize;
  }

  .info .one {
    color: #d47b81;
    background-color: #fff6f5;
    border-radius: 5px;
    margin-top: 10px;
    display: flex;
    align-items: center;
  }

  .info .two {
    color: #debb6a;
    background-color: #fffbf2;
    border-radius: 5px;
    margin-top: 10px;
    display: flex;
    align-items: center;
  }

  .info .tree {
    color: #4ab593;
    background-color: #f0faf9;
    border-radius: 5px;
    margin-top: 10px;
  }

  .info .four {
    color: #5954a1;
    background-color: #f2f2fc;
    border-radius: 5px;
    margin-top: 10px;
  }

  .info .con {
    border: none;
    border-radius: 20px;
    text-transform: capitalize;
    color: #fff;
    padding: 15px;
    background-color: #303b59;
    margin-top: 20px;
    font-weight: 700;
  }

  .con:hover {
    cursor: pointer;
  }

  .nums {
    color: #000;
  }
</style>
